<UserControl
    x:Class="YeelightForCortana.CustomControl.ColorSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YeelightForCortana.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid x:Name="ColorViewer" Background="White" PointerPressed="ColorViewer_PointerPressed" PointerReleased="ColorViewer_PointerReleased" PointerMoved="ColorViewer_PointerMoved">
            <Ellipse x:Name="Dot" HorizontalAlignment="Left" Height="15" Margin="-7.5,-7.5,0,0" Stroke="Black" VerticalAlignment="Top" Width="15" StrokeThickness="2"/>
        </Grid>

    </Grid>
</UserControl>
